# ===========================================
# 6AD Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE - MongoDB (Self-hosted on VPS)
# ===========================================

# Local MongoDB (on same VPS server)
DATABASE_URL=mongodb://coinest_user:your_password@localhost:27017/coinest?authSource=admin

# Or with replica set (recommended for production)
# DATABASE_URL=mongodb://coinest_user:your_password@localhost:27017/coinest?authSource=admin&replicaSet=rs0

# ===========================================
# API SERVER
# ===========================================
PORT=5001
NODE_ENV=production

# JWT Secret (generate a secure random string)
# Run: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-min-64-chars

# ===========================================
# FRONTEND URLs (for CORS)
# ===========================================
ADMIN_URL=https://admin.yourdomain.com
AGENCY_URL=https://agency.yourdomain.com
USER_URL=https://app.yourdomain.com

# ===========================================
# AWS CONFIGURATION (Optional - for S3 uploads)
# ===========================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=your-bucket-name

# ===========================================
# BLOCKCHAIN API KEYS (For Crypto Deposits)
# ===========================================
# TronGrid API Key - Get from https://www.trongrid.io/
# Free tier: 100,000 requests/day
TRONGRID_API_KEY=your-trongrid-api-key

# BSCScan API Key - Get from https://bscscan.com/apis
# Free tier: 5 calls/second, 100,000 calls/day
BSCSCAN_API_KEY=your-bscscan-api-key

# ===========================================
# BROWSER AUTOMATION (Facebook Profiles)
# ===========================================
# Directory to store persistent browser profiles
BROWSER_PROFILES_DIR=./data/browser-profiles

# Path to Chrome/Chromium binary (leave empty for bundled Chromium)
CHROME_PATH=

# VNC settings (Linux VPS only - set to false for macOS dev)
VNC_ENABLED=false
VNC_HOST=0.0.0.0
VNC_PORT_RANGE_START=5900
NOVNC_PORT=6080
